{% extends 'base.html.twig' %}

{% block title %}Prisijungimas{% endblock %}

{% block body %}
<form method="post">
    <div class="Block">
        <div class="Title">
            <h3 class="Title-name">Prisijungimas</h3>
        </div>
        <div class="col-md-4 offset-md-4 Login mt-3">
            <div class="Input">
                <input
                    type="email"
                    value="{{ last_username }}"
                    name="email"
                    id="inputEmail"
                    class="Input-value Input-value--primary"
                    required
                >
                <span class="Input-name">El. paštas</span>
            </div>
            <div class="Input">
                <input
                    type="password"
                    name="password"
                    id="inputPassword"
                    class="Input-value Input-value--primary"
                    required
                >
                <span class="Input-name">Slaptažodis</span>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </div>

        {% if error %}
            <div class="col-md-6 offset-md-3 mt-3">
                <p class="Login-errorMessage">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
            </div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }},
                <a href="{{ path('app_logout') }}">Atsijungti</a>
            </div>
        {% endif %}
        <div class="col-md-12 mt-3 Login-action">
            <button class="Button Button--primary" type="submit">Prisijungti</button>
        </div>
    </div>
</form>
{% endblock %}
