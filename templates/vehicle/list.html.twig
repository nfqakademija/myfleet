{% extends 'base.html.twig' %}

{% block title %}My Fleet{% endblock %}

{% block body %}
    <div class="Filter">
        <h3 class="Title">Filtras</h3>
        <form class="Filter-content" action="/vehicle/list">
            <select class="col-md-4 Select" name="type">
                <option selected value="">Pasirinkite priemonės tipą</option>
                <option value="car">Automobilis</option>
                <option value="van">Furgonas</option>
                <option value="semitrailer">Puspriekabė</option>
                <option value="truck">Vilkikas</option>
            </select>
            <input
                type="text"
                class="col-md-4 Input"
                name="plate_number"
                placeholder="Įveskite valstybinį numerį"
            >
            <div class="col-md-12 Filter-action">
                <button type="submit" class="Button Button--primary">Filtruoti</button>
            </div>
        </form>
    </div>
    <div class="Table">
        <div class="Table-info">
            <h3 class="Title">Transporto priemonių sąrašas</h3>
            <a class="Button Button--primary" href="/vehicle/create">Pridėti naują</a>
        </div>
        <table class="Table-content col-md-12">
            <thead>
                <tr class="Table-header">
                    <th class="Table-column">Markė</th>
                    <th class="Table-column">Modelis</th>
                    <th class="Table-column">Kėbulo tipas</th>
                    <th class="Table-column">Valstybinis numeris</th>
                    <th class="Table-column">VIN kodas</th>
                    <th class="Table-column"></th>
                </tr>
            </thead>
            <tbody>
                {% for vehicle in vehicles %}
                    <tr class="Table-row">
                        <td class="Table-data">{{ vehicle.make }}</td>
                        <td class="Table-data">{{ vehicle.model }}</td>
                        <td class="Table-data">{{ vehicle.type | trans }}</td>
                        <td class="Table-data">{{ vehicle.registrationPlateNumber }}</td>
                        <td class="Table-data">{{ vehicle.vinCode }}</td>
                        <td class="Table-data"><a href="{{ path('vehicle_view', { id: vehicle.id }) }}">Plačiau</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <br>
    {% spaceless %}
        {% if pages_count > 1 %}

            {# the number of first and last pages to be displayed #}
            {% set extremePagesLimit = 3 %}

            {# the number of pages that are displayed around the active page #}
            {% set nearbyPagesLimit = 2 %}

            <div class="pagination">
                {% if current_page > 1 %}
                    <a href="{{ path('vehicle_list', current_filters|merge({page: current_page-1})) }}">Atgal</a>

                    {% for i in range(1, extremePagesLimit) if ( i < current_page - nearbyPagesLimit ) %}
                        <a href="{{ path('vehicle_list', current_filters|merge({page: i})) }}">{{ i }}</a>
                    {% endfor %}

                    {% if extremePagesLimit + 1 < current_page - nearbyPagesLimit %}
                        <span class="sep-dots">...</span>
                    {% endif %}

                    {% for i in range(current_page-nearbyPagesLimit, current_page-1) if ( i > 0 ) %}
                        <a href="{{ path('vehicle_list', current_filters|merge({page: i})) }}">{{ i }}</a>
                    {% endfor %}
                {% endif %}

                <a href="#"
                   class="active">{{ current_page }}</a>

                {% if current_page < pages_count %}
                    {% for i in range(current_page+1, current_page + nearbyPagesLimit) if ( i <= pages_count ) %}
                        <a href="{{ path('vehicle_list', current_filters|merge({page: i})) }}">{{ i }}</a>
                    {% endfor %}

                    {% if  (pages_count - extremePagesLimit) > (current_page + nearbyPagesLimit) %}
                        <span class="sep-dots">...</span>
                    {% endif %}

                    {% for i in range(pages_count - extremePagesLimit+1, pages_count) if ( i > current_page + nearbyPagesLimit ) %}
                        <a href="{{ path('vehicle_list', current_filters|merge({page: i})) }}">{{ i }}</a>
                    {% endfor %}

                    <a href="{{ path('vehicle_list', current_filters|merge({page: current_page+1})) }}">Toliau</a>
                {% endif %}
            </div>
        {% endif %}
    {% endspaceless %}
{% endblock %}