{% extends 'base.html.twig' %}

{% block title %}MyFleet{% endblock %}

{% block body %}
    <div class="Button-return">
        <a class="Button Button--primary Button-link" href="{{
        path('vehicle_view', {
            id: vehicle.id,
            type: app.request.query.get('type'),
            plate_number: app.request.query.get('plate_number')
        }) }}">
            <i class="material-icons Button-icon">arrow_back</i>
        </a>
    </div>
    <div class="Block my-4">
        <div class="Title">
            <h3 class="Title-name">Redaguoti transporto priemonės informaciją</h3>
        </div>
        {{ form_start(vehicleForm, {'action': path('vehicle_update', {
            id: vehicle.id,
            type: app.request.query.get('type'),
            plate_number: app.request.query.get('plate_number')
        })}) }}
        <div class="Block-content mt-4">
            <div class="col-md-12">{{ form_errors(vehicleForm) }}</div>
            <div class="col-md-5 mx-4 Block-field">
                {{ form_widget(vehicleForm.make, {'attr': {'class': 'Input', 'placeholder': 'Pavadinimas'}}) }}
                <div class="mt-2 Form Form-field--error">{{ form_errors(vehicleForm.make) }}</div>
            </div>
            <div class="col-md-5 mx-4 Block-field">
                {{ form_widget(vehicleForm.model, {'attr': {'class': 'Input', 'placeholder': 'Modelis'}}) }}
                <div class="mt-2 Form Form-field--error">{{ form_errors(vehicleForm.model) }}</div>
            </div>
            <div class="col-md-5 mx-4 Block-field">
                {{ form_widget(vehicleForm.firstRegistration, {'attr': {'class': 'Input'}}) }}
                <div class="mt-2 Form Form-field--error">{{ form_errors(vehicleForm.firstRegistration) }}</div>
            </div>
            <div class="col-md-5 mx-4 Block-field">
                {{ form_widget(vehicleForm.plateNumber, {'attr': {'class': 'Input Input-form', 'placeholder': 'Valstybinis numeris'}}) }}
                <div class="mt-2 Form Form-field--error">{{ form_errors(vehicleForm.plateNumber) }}</div>
            </div>
            <div class="col-md-5 mx-4 Block-field">
                {{ form_widget(vehicleForm.vin, {'attr': {'class': 'Input', 'placeholder': 'VIN kodas'}}) }}
                <div class="mt-2 Form Form-field--error">{{ form_errors(vehicleForm.vin) }}</div>
            </div>
            <div class="col-md-5 mx-4 Block-field">
                {{ form_widget(vehicleForm.type, {'attr': {'class': 'Select'}}) }}
                <div class="mt-2 Form Form-field--error">{{ form_errors(vehicleForm.type) }}</div>
            </div>
            <div class="col-md-5 mx-4 Block-field">
                {{ form_widget(vehicleForm.additionalInformation, {'attr': {'class': 'Input', 'placeholder': 'Papildoma informacija'}}) }}
                <div class="mt-2 Form Form-field--error">{{ form_errors(vehicleForm.additionalInformation) }}</div>
            </div>
            <div class="col-md-12 Block-field text-center">
                {{ form_widget(vehicleForm.save, {'attr': {'class': 'Button Button--primary'}}) }}
            </div>
        </div>
        {{ form_end(vehicleForm) }}
    </div>
{% endblock %}